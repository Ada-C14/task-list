<%=form_with model: @task, class: 'task_form' do |f| %>
  <p>Please update your task here:</p>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :completed_at %>
    <%= f.text_area :completed_at %>
  </div>
  <%= f.submit "Update Task!" %>
<% end %>