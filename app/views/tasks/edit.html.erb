<h2>Edit Task</h2>

<%= form_with model: @task do |f| %>
  <p>Edit Task:</p>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :completed_at %>
    <%= f.text_field :completed_at %>
  </div>
  <div>
    <%= f.submit "Edit Task" %>
  </div>


<% end %>