<h2>Task List</h2>

<%= "Check this everyday!".upcase %>

<%= form_with model: @task, class: "task_form" do |f| %>
    <p>Please provide the following information to update a task in our database:</p>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>
    <div>
        <%= f.label :description %>
        <%= f.text_area :description %>
    </div>
    <%= f.submit "Update a task", class: 'task-button' %>
<% end %>