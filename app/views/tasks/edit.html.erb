<h1>Edit Task</h1>

<div>
  <%= form_with model: @task, class: 'create-task' do |f| %>
    <p>Please enter info about your task in order to edit it:</p>

    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>

    <div>
      <%= f.label :completed_at %>
      <%= f.text_field :completed_at %>
    </div>

    <%= f.submit "Edit Task", class: "task-button" %>
  <% end %>
</div>