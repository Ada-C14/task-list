<%= form_with model: @task do |f| %>
    <p>Please provide the following information to edit your book</p>

    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :completed_at %>
    <%= f.text_field :completed_at %>

    <%= f.submit "Edit Task" %>

<% end %>