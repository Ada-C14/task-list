<div class="container">
<h3>EDIT TASK</h3>
<%= form_with model: @task do |f| %>

  <div>
    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
  </div>
<br>
  <div>
    <%= f.label :description %>
    <br>
    <%= f.text_area :description %>
  </div>
<br>
  <%= f.submit "Update task" %>

<% end %>
</div>