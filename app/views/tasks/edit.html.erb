<%# in app/views/edit.html.erb %>

<%= form_with model: @task, class: 'create-task' do |f| %>
  <p>Please provide the following information to edit your task in our database:</p>

  <%= f.label :name, "Task" %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :completed_at %>
  <%= f.text_field :completed_at %>

  <%= f.submit "Edit Task", class: "task-button" %>
<% end %>