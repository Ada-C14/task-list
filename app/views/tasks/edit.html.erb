<h1>Edit Task</h1>

<%= form_with model: @task, class: 'edit-task' do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :completed_at %>
  <%= f.text_field :completed_at %>

  <%= f.submit "Edit Task", class: 'book-button' %>
<% end %>
