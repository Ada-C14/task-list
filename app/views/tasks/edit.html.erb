<h1>Edit Task</h1>

<%= form_with model: @task do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div>
    <%= f.label :completed_at %>
    <%= f.text_field :completed_at %>
  </div>

  <%= f.submit "Save Task", class: "task-button" %>
<% end %>