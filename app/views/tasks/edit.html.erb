<%= form_with model: @task do |f| %>
  <p> Please provide the info to edit the task:</p>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :completed_at %>
    <%= f.text_field :completed_at %>
  </div>
  <%= f.submit "Edit a task!" %>
<% end %>