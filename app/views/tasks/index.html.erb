<h2>Tasks List:</h2>
<ul>
  <% if @tasks.length > 0 %>
    <% @tasks.each do |task| %>
      <li>
        <%= link_to task.name, task_path(task) %>: <%= task.description %>, completed at: <%= task.completed_at %>
        <%= link_to "Edit Task", edit_task_path(task) %>
        <%= link_to "Delete", task_path(task), method: :delete %>
      </li>
    <% end %>
  <% else %>
    <p> No tasks in list</p>
  <% end %>
</ul>

