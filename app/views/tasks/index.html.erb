<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task|  %>
    <li>
      <% if task.completed_at != ""%>
        <strike><%= link_to task.name, task_path(task) %></strike>

        <% else %>
      <%= link_to task.name, task_path(task) %>
        <%= link_to "Finished!", markup_task_path(task.id), method: :patch %>
        <% end %>

    </li>
  <% end %>
</ul>

<%= link_to "New", new_task_path %>
