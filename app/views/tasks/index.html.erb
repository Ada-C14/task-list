<h2>Your Tasks</h2>

<% if @tasks.length > 0 %>
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <%= link_to task.name, task_path(task) %> (<%= link_to "Edit", edit_task_path(task) %>)
      </li>
    <% end %>
  </ul>
  <%= link_to "Add Book", new_task_path %>
<% else %>
  <p>You have no tasks.</p>
<% end %>
