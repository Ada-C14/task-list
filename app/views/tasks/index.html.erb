<h1>Welcome to task manager!</h1>
<h3> Please see all tasks below:</h3>
<ol>
  <% @tasks.each do |task|  %>
    <li>
      <a href="/tasks/<%=task.id %>"> Name:</strong>  <%= task.name %> </a>
      <strong>Description:</strong> <%= task.description %>
      <strong>Completed at:</strong> <%= task.completed_at%>
     
      <%= link_to "Delete", task_path(task.id), method: :delete, data: {confirm: "Are you sure?"} %>
      <%= link_to "Complete", complete_task_path(task.id), method: :patch %>
    </li>
  <% end %>
</ol>

<% if false %>
<%= link_to 'Delete',url_for(action: :delete,id: @user.id),method: :delete, data: {confirm: "Are you sure?"} %>
<% end %>

<p> 
  <%= link_to "New Task", new_task_path %>
</p>