<h2>Task List</h2>

<ol class="task-list">
  <% @tasks.each do |task| %>
    <% if task.completed_at.empty? || task.completed_at.nil? %>
      <li><%= task.name %></li>
    <% else %>
      <li><s><%= task.name %></s></li>
    <% end %>

    <%= link_to "show details", task_path(task) %> |
    <%= link_to "edit", edit_task_path(task) %> |
    <%= link_to "delete", task_path(task), method: :delete, data: { confirm: "Are you sure (or are you avoiding your responsibilities)?" } %> |
    <%= link_to "mark complete", toggle_complete_path(task), method: :patch %>
  <% end %>
</ol>

<%= link_to "add task", new_task_path, class: "button" %>