<h1>Task List!</h1>
<ul>
<% @tasks.each do |task| %>
  <li><h2 class="<%= 'strike' if task.is_complete %>">
      <%= link_to task.name, task_path(task) %>
  </h2></li>
  <li>Description: <%= task.description %></li>
  <li>Completed at: <%= task.completed_at %></li>
    <li><h4>
      <% string = "Mark not done" if task.is_complete %>
      <% string = "Mark as done" unless task.is_complete %>
      <%= link_to string, toggle_complete_path(task), method: :post  %>
    </h4></li>
    <li><h5><%= link_to 'Edit Task', edit_task_path(task) %></h5></li>
    <li><h5><%= link_to 'Delete Task', task_path(task), method: :delete,
    data: {confirm: 'Sure you want to delete?'} %></h5></li>
  <hr>
<% end %>
</ul>
<h3><%= link_to "Add new task", new_task_path %></h3>