
<main>
  <ul class = items>
    <% @tasks.each do |task|  %>
      <li>
        <h4><%= link_to task.name, task_path(task.id) %> </h4>
        <p> Description: <%= task.description %></p>
        <p> Date completed: <%=display_task_completed_at(task)%> </p>
        <div class = "button"><%= link_to "Delete", task_path(task), method: :delete %></div>
        <div class = "button"><%= link_to "Mark Complete", complete_task_path(task), method: :patch%></div>
      </li>
    <% end %>
  </ul>
</main>