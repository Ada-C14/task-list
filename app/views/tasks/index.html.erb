
<%#index.html.erb%>
<h1>Tasks List</h1>
<ul>
  <% @tasks.each do |task|  %>
    <li>
      <%= link_to task.id, task_path(task) %>
      <%= link_to task.name, task_path(task) %>
      Description: <%= task.description %>
      Completed_at: <%= task.completed_at %>
       <%= link_to "Edit Task", edit_task_path(task.id) %>
      <%= link_to "Delete", task_path(task.id), method: :delete, class: 'book---delete-link' %>
    </li>
  <% end %>
</ul>
<%= link_to "Add Task", new_task_path %>


