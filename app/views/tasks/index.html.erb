
<h3>Here's your current list:</h3>

<% if @tasks.length > 0 %>
  <ol>
    <% @tasks.each do |task| %>
      <li>
        <strong><%= link_to task.name, task_path(task)%>
        </strong>: <em><%= task.description %></em>
      </li>
    <% end %>
  </ol>
  <% else %>
    <h3>No tasks in system!</h3>
  <% end %>
<p>Add a new task here:</p>
  <ul>
    <li><%= link_to "Add New Task", new_task_path %></li>
  </ul>

