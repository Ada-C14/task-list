<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <% task_style = task.completed_at.nil? ? 'incomplete-task' : 'completed-task' %>
      <%= link_to task.name.capitalize, task_path(task), class: task_style %>

      <div>
        Description: <%= task.description %>
      </div>
      <div>
        <%= link_to "Show", task_path(task.id) %> |
        <%= link_to "Edit", edit_task_path(task) %> |
        <%= link_to "Delete", task_path(task.id), method: :delete,
                    data: {confirm: 'Are you sure you would like to delete?'} %> |
        <% if task.completed_at.nil? %>
          <%= link_to "Mark as Complete", mark_task_path(task), method: :patch %>
        <% else %>
          <%= link_to "Mark as Incomplete", mark_incomplete_path(task), method: :patch %>
        <% end %>

      </div>
    </li>

  <% end %>
</ul>
