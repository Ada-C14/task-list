<h3><%= "Check this everyday!".upcase %></h3>

<% if @tasks.count > 0 %>
  <ul>
    <% @tasks.each do |task| %>
      <li><%= link_to task.name, task_path(task.id) %>: <%= task.description %> -- Due by <%= task.completed_at %></li>
    <% end %>
  </ul>
<% else %>
  <h3>No tasks in the list!</h3>
<% end %>