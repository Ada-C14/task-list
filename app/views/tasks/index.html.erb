<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task|  %>
    <li>
       <%= link_to task[:name], task_path(task) %> | 
       <%= link_to "show", task_path(task)%> | 
       <%= link_to "edit", edit_task_path(task)%> |
       <%= link_to "delete", task_path(task), method: :delete %>
    </li>
    <br>
  <% end %>
</ul>

<%= link_to "ADD NEW", new_task_path(@task) %> 