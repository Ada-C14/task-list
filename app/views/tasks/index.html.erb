<h1>Task List</h1>
<nav>

</nav>
<div>
  <%@tasks.each do |task|%>
    <ul>
      <li>
        <strong><%= link_to task.name.capitalize, task_path(task.id) %></strong> : <%= task.description&.capitalize %> <%= link_to "Edit Task", edit_task_path(task.id) %> | <%= link_to "Delete Task", task_path(task.id), method: :delete %> | <%= link_to "Mark Completed", completed_at_task_path(task.id), method: :patch%></>
      <%if task.completed_at %>
      <input type="checkbox" id="scales" name="scales"
             checked disabled>
     <%else%>
      <input type="checkbox" id="scales" name="scales"
             disabled>
      <%end%>
      </li>
    </ul>
  <% end %>
</div>
<p>  </p>

