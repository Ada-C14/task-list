<h1>Task List</h1>
<% if @tasks.count > 0 %>
    <ul>
    <% @tasks.each do |task| %>
      <li>
        <h3><%= task.name %></h3>
        Description: <%= task.description %><br>
        Date completed: <%= task.completed_at %>
      </li>
    <% end %>
    </ul>
  <% else %>
    <h3>No tasks in the system<h3>
  <% end %>