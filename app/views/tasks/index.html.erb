<h1>Tasks</h1>
<div>
  <% @tasks.each do |task| %>
    <ul>
      <li>
          <%= link_to task.name, task_path(task.id)  %>
          <%= link_to 'Edit Task', edit_task_path(task.id) %>
          <%= link_to 'Delete Task', confirm_task_path(task.id) %>
      </li>
    </ul>
  <% end %>
</div>

<div>
  <%= link_to 'Add Task', new_task_path %>
</div>