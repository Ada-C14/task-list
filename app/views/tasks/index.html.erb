<h2> To Do: </h2>
<ul>
<% @tasks.each do |task| %>
<li> <%= link_to task[:name], task_path(task) %> - <%= task[:description] %> - Completed: <%= task[:completed_at]  %></li>
<%= link_to "Edit Task", edit_task_path(task) %>
    <%= link_to "Delete Book", task_path(task), method: :delete, data: {confirm: "Are you sure?"}%>
  <% end %>
</ul>