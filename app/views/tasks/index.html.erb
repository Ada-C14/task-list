<h1>Tasks<h2>

<p><%= link_to "Add a new task", new_task_path %></p>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.name, task_path(task.id) %>
      <p>
      <%= link_to "Delete", task_path(task), method: :delete, data: {confirm: "Are you sure you want to delete this task?"}%>
      </p>
      <%= form_with model: @task, class: 'complete-task', url: complete_task_path(task) do |f| %>
        <% f.submit "Mark complete" %>
      <% end %>

      <p>Completed at:<%= task.completed_at%></p>
    </li>
  <% end %>
</ul>      