<h1>Task List</h1>
<nav>
  <%@tasks.each do |task|%>
  <ul>
    <li>
      <%= link_to task.name.capitalize, task_path(task) %> : <%= task.description&.capitalize %> <%= link_to "Edit Task", edit_task_path(task) %> | <%= link_to "Delete Task", task_path(task), method: :delete %>
    </li>
  </ul>
</nav>
<% end %>

