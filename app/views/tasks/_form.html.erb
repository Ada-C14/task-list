<%= form_with model: @task, class: 'create-task' do |f| %>

  <p>Please fill out the following easy form:</p>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>
  <%= f.label :completed_at %>
  <%= f.text_field :completed_at %>
  <br>
  <%= f.submit action_name %>

<% end %>

