<%= form_with model: @task, class: 'create-task' do |f| %>
  <p>Please provide the following information to <%= "#{action_name.downcase}" %>  your task in our database:</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

<% if action_name == "Edit" %>
  <%= f.label :completed_at %>
  <%= f.text_field :completed_at %>
<% end %>

  <%= f.submit "#{action_name} Task", class: "task-button" %>
<% end %>


