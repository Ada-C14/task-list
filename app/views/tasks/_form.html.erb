<%= form_with model: @task, class: 'edit-task' do |f| %>
  <p>Please provide the following information to save your task to our database:</p>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <%= f.submit "#{action_name} Task", class: "task-button" %>
<% end %>