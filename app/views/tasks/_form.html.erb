<%# in app/views/new.html.erb %>

<%= form_with model: @task, class: 'edit-task' do |f| %>
  <p>Please fill in the form to edit your task to our database:</p>

  <p><%= f.label :name %>
    <%= f.text_field :name %></p>

  <p><%= f.label :description %>
    <%= f.text_area :description %></p>

  <p><%= f.label :completed_at %>
    <%= f.text_field :completed_at %></p>

  <p> <%= f.submit action_name, class: "task-button" %></p>
<% end %>