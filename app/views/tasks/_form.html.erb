<% if @task.errors.any? %>
  <ul class="errors">
    <% @task.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @task, class: 'create-task' do |f| %>
  <ul>
    <li>
      <h3><%= f.label :name %></h3>
      <%= f.text_field :name %>
    </li>
    <li>
      <h3><%= f.label :description %></h3>
      <%= f.text_field :description %>
    </li>
  </ul>
  <%= f.submit "Save", class: "save-task" %>
<% end %>