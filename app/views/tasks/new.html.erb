<h1>For When You Finish Your Homework</h1>
<h2>New Task</h2>


<%= form_with model: @task, class: 'create-task' do |f| %>
  <p>Please enter the following information about the task:</p>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <%= f.submit "Submit Task" %>
<% end %>

