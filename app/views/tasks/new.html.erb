<%= form_with model: @task, class: 'create-tasl' do |f| %>
  <p>Please provide the following information to save the new task to our database:</p>

  <div>
  <%= f.label :name %>
  <%= f.text_field :name %>
  </div>

  <div>
  <%= f.label :description %>
  <%= f.text_field :description %>
  </div>

  <div>
  <%= f.label :completed_at %>
  <%= f.text_field :completed_at %>
  </div>

  <%= f.submit "Save Book", class: "book-button" %>
<% end %>