<h2>New Task Form:</h2>
<%= form_with model: @task, class: 'task-form' do |f| %>
  <p>Please fill in the details to add a new task:</p>

  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :completed_at %>
    <%= f.date_field :completed_at %>
  </div>

  <%= f.submit "Add task", class: 'task-button' %>
<% end %>