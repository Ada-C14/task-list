<h2>New Task</h2>

<%= form_with model: @task, class: 'task-form' do |f| %>
  <p>Please provide the following information to save your task to our database.</p>

  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <br>
  <%= f.label :completed_at %>
  <%= f.text_field :completed_at %>
  <br>
  <%= f.submit "save task" %>
<% end %>