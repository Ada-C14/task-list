<h3>New Task</h3>
<%= form_with model: @task, class: 'create-task' do |f| %>
  <p>Please enter the new task:</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :completed_at %>
  <%= f.text_field :completed_at %>

  <%= f.submit "Save", class: "task-button"%>
<% end %>

