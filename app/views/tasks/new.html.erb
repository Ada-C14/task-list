<%= form_with model: @task, class: 'create-task' do |f| %>
  <p>Please provide the following information to add your task to your database:</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :start_date %>
  <%= f.text_field :started_at %>

  <%= f.submit "Save Task", class: "task-button" %>
<% end %>