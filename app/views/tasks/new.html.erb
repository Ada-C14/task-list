<%= form_with model: @task do |f| %>
  <p>Add a new task!</p>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description%>
  <%= f.text_field :description %>

  <%= f.label :completed_at %>
  <%= f.text_field :completed_at %>

  <%= f.submit "Save Task", class: "task-button" %>
<% end %>