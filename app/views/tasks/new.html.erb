<main>
  <h5>Create/Edit Task</h5>
  <%= form_with model: @task do |f| %>
    <p>Enter information for the new task:</p>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br/>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br/>
    <%= f.label :completed_at %>
    <%= f.text_field :completed_at %>
    <br/>
    <%= f.submit "Save Task", class: "btn btn-success btn-sm" %>
  <% end %>
  <p>
    <%= button_to "Return to Task List", root_path, method: :get, class: "btn btn-primary" %>
  </p>
</main>