<h2>Create A New Task</h2>

<%= form_with model: @task, class: 'create-task' do |f| %>
    <p> Please fill out this form:</p>
    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>  
    <div>
        <%= f.label :description %>
        <%= f.text_area :description %>
    </div> 
    <div>
        <%= f.label :completed_at %>
        <%= f.datetime_field :completed_at %>
    </div>
    <%= f.submit "Save Task", class: "save-task-button" %>
    
<% end %>    
