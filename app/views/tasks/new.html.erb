<h3>Add A New Task</h3>

<%= form_with model: @task, class: 'task-form' do |f| %>
  <p>Please enter the following information to save a new task:</p>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :completed_at %>
    <%= f.text_field :completed_at %>
  </div>

  <%= f.submit "Add A New Task" %>
<% end %>