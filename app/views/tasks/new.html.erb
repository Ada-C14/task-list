<h2>New Task</h2>

<%= form_with model: @task, class: 'create-task' do |f| %>
  <p>Please provide the following information to save your task to our database.</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :completed_at %>
  <%= f.text_field :completed_at %>

  <%= f.submit "save task", class: "save-button" %>
<% end %>

<p><%= link_to "go back", tasks_path %></p>