<%# in app/views/new.html.erb %>

<%= form_with model: @task, class: 'create-task' do |f| %>
  <p>Please provide the following information to save your task:</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit "Save Task", class: "task-button" %>
<% end %>

<p><%= link_to "Return to Task List", tasks_path %></p>