<div>
  <h2>Task: <%= @task.name %></h2>
  <h4>Description: <%= @task.description %></h4>
  <h4>Completed at: <%= @task.completed_at %></h4>
  <%= link_to "Edit", edit_task_path(@task) %>
  <%= link_to "Delete", task_path(@task.id), method: :delete, data: {confirm: "Are you sure?"}%>
  <%= link_to "Mark as Complete", toggle_complete_path(@task.id), method: :patch %>
</div>


<p><%= link_to "Return to Task List", tasks_path %></p>

