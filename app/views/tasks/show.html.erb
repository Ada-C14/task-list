<main>
  <h5><%= @task.name %></h5>
  <p><%= @task.description %></p>
  <p>Completed: <%= @task.completed_at.strftime("On %m/%d/%Y at %I:%M %p") %></p>
  <%= button_to "Edit Task", edit_task_path, method: :get, class: "btn btn-warning btn-sm" %>
  <%= button_to "Delete Task", task_path(@task.id), method: :delete, data: { confirm: "Are you sure you want to delete this task?" }, class: "btn btn-danger btn-sm" %>
  <p>
    <%= button_to "Return to Task List", root_path, method: :get, class: "btn btn-primary" %>
  </p>
</main>
