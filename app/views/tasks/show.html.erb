<h1><%= @task.name %></h1>
<ul>
  <li>
    <%= @task.description %>
  </li>
  <li>
    <%= @task.started_at %>
  </li>
  <li>
    <% if @task.completed_at.nil? %>
      Incomplete
      <%= link_to "Mark as Complete", mark_task_path(@task), method: :patch %>
    <% else %>
      Completed on
      <%= @task.completed_at[0...10] %>
      <%= link_to "Mark as Incomplete", mark_incomplete_path(@task), method: :patch %>

    <% end %>
  </li>
  <li><%= link_to "Edit", edit_task_path(@task) %> or
    <%= link_to "Delete", task_path(@task.id), method: :delete, data: {confirm: 'Are you sure you would like to delete?'} %>
  </li>
</ul>
