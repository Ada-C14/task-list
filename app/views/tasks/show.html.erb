<h2>Task detail</h2>
<ul>
  <li>
    Task name: <%= @task.name %>
  </li>
  <li>
    Description: <%= @task.description %>
  </li>
  <% if @task.completed_at.blank? %>
    <li>Task not completed</li>
  <% else %>
    <li>Completed: <%= @task.completed_at %></li>
  <% end %>

</ul>
<p>
  <%= link_to "Edit task", edit_task_path %>
</p>
<p>
  <%= link_to "Return to task list", tasks_path %>
</p>




