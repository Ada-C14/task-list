

<div class="container">

<h3><%= @task.name %></h3>
<p><%=@task.description %></p>
<p>Status: <%= @task.completed_at.nil? ? "in progress" : "completed on #{@task.completed_at}" %> </p>

<div class="button">
  <%= button_to @task.completed_at.nil? ? "Mark Complete" : "Mark Incomplete", mark_complete_path(@task.id), method: :patch %>
</div>

<div class="button">
  <%= button_to "Edit task", edit_task_path(@task.id), method: :get %>
</div>

<div class="button">
  <%= button_to "Delete task", task_path(@task.id), method: :delete, data: {confirm: "Are you sure you want to delete this task?" } %>
</div>

</div>