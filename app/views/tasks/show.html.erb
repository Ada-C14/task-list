<h2><%= @task[:name] %></h2>
<h3><%= @task[:description] %></h3>
<h3><%= @task[:completed_at] %></h3>


<p><%= link_to "Edit Task", edit_task_path(@task) %></p>
<p><%= link_to "Delete Task", task_path(@task), method: :delete, data: {confirm: "Are you sure you want to delete this task?"} %></p>
<p><%= link_to "Return to Task List", tasks_path %></p>